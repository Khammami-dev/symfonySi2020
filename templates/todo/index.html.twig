{% extends 'base.html.twig' %}

{% block title %}
    Liste des todos
{% endblock %}

{% block body %}
<ul class="list-group list-group-flush">
    <div class="list-group-item active">
        Liste des todos
    </div>
    {% for name, content in app.session.get('mesTodos') %}
        <li class="list-group-item">
            {{ name }} : {{ content }}
        </li>
    {% endfor %}
</ul>
{% endblock %}